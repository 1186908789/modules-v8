<?xml version="1.0" encoding="UTF-8"?>
<module rename-to="solr">

    <inherits name="com.google.gwt.user.User" />
    <inherits name="com.google.gwt.i18n.I18N"/>
    <inherits name="com.google.gwt.json.JSON" />
    <inherits name="com.google.common.collect.Collect" />
    
    <inherits name="com.google.gwt.http.HTTP" />
    <inherits name="com.google.gwt.i18n.I18N"/>

    <!-- Set this property for reducing the number of compiled user agent permutations. --> 
    <!-- <set-property name="user.agent" value="safari" /> -->

    <extend-property name="locale" values="en,de"/>
    <set-property-fallback name="locale" value="en"/>
    <set-property name="locale" value="en,de"/>
    <collapse-property name="locale" values="*" />
    
    <source path="client" />
    <source path="shared" />
    <entry-point class="com.alkacon.bootstrap.solr.client.CmsSolrEntryPoint"></entry-point>
    
</module>
