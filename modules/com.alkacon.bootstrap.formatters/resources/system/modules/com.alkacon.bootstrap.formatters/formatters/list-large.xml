    <Setting>
      <PropertyName><![CDATA[teaserlength]]></PropertyName>
      <DisplayName><![CDATA[%(key.bootstrap.list.setting.teaserlength)]]></DisplayName>
      <Widget><![CDATA[string]]></Widget>
      <Default><![CDATA[200]]></Default>
    </Setting>
