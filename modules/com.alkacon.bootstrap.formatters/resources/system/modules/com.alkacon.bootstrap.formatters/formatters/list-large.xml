      <PropertyName><![CDATA[hidetitle]]></PropertyName>
      <DisplayName><![CDATA[%(key.bootstrap.list.setting.hidetitle)]]></DisplayName>
      <Widget><![CDATA[checkbox]]></Widget>
      <Default><![CDATA[false]]></Default>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[showdate]]></PropertyName>
      <DisplayName><![CDATA[%(key.bootstrap.list.setting.showdate)]]></DisplayName>
      <Widget><![CDATA[checkbox]]></Widget>
      <Default><![CDATA[true]]></Default>
