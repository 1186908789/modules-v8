      <WidgetConfig><![CDATA[top:%(key.bootstrap.list.layout.top)|left:%(key.bootstrap.list.layout.left)|box:%(key.bootstrap.list.layout.box)]]></WidgetConfig>
    </Setting>
    <Setting>
      <PropertyName><![CDATA[buttoncolor]]></PropertyName>
      <DisplayName><![CDATA[%(key.bootstrap.list.setting.buttoncolor)]]></DisplayName>
