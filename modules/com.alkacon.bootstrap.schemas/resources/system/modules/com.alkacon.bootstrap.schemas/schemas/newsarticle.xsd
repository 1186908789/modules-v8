<xsd:schema xmlns:xsd="http://www.w3.org/2001/XMLSchema" elementFormDefault="qualified">
	
	<xsd:include schemaLocation="opencms://opencms-xmlcontent.xsd"/>
	<xsd:include schemaLocation="opencms://system/modules/com.alkacon.bootstrap.schemas/schemas/nested/paragraph.xsd"/>
		
	<xsd:element name="BootstrapNewsarticles" type="OpenCmsBootstrapNewsarticles"/>
	
	<xsd:complexType name="OpenCmsBootstrapNewsarticles">
		<xsd:sequence>
			<xsd:element name="BootstrapNewsarticle" type="OpenCmsBootstrapNewsarticle" minOccurs="0" maxOccurs="unbounded"/>
		</xsd:sequence>
	</xsd:complexType>

	<xsd:complexType name="OpenCmsBootstrapNewsarticle">
		<xsd:sequence>
			<xsd:element name="Title" type="OpenCmsString" />
			<xsd:element name="Paragraph" type="OpenCmsBootstrapParagraph" maxOccurs="5" />
		</xsd:sequence>
		<xsd:attribute name="language" type="OpenCmsLocale" use="required"/>
	</xsd:complexType>

	<xsd:annotation>
		<xsd:appinfo>
			<resourcebundle name="com.alkacon.bootstrap.schemas.newsarticle"/>
			<mappings>
				<mapping element="Title" mapto="property:Title" />
				<mapping element="Title" mapto="urlName" />
			</mappings>
			<defaults>
				<default element="Title" value="%(key.bootstrap.newsarticle.default.Title)" />
				<default element="Paragraph/Text" value="%(key.bootstrap.newsarticle.default.Text)" />
			</defaults>
			<layouts/>
			<validationrules/>
			<relations>
				<relation element="Paragraph/Image/Image" invalidate="parent" />
			</relations>
			<searchsettings containerPageOnly="false">
				<searchsetting element="Title" searchcontent="true">
					<solrfield targetfield="Title" />
				</searchsetting>
			</searchsettings>
			<formatters>
				<formatter type="content" uri="/system/modules/com.alkacon.bootstrap.formatters/formatters/newsarticle.jsp" searchcontent="true" />
				<formatter type="content-full" uri="/system/modules/com.alkacon.bootstrap.formatters/formatters/newsarticle.jsp" searchcontent="true" />
			</formatters>
			<settings>
				<setting name="imgalign" nice-name="%(key.bootstrap.newsarticle.setting.imgalign)" type="string" widget="select" widget-config="left:%(key.bootstrap.newsarticle.image.left)|right:%(key.bootstrap.newsarticle.image.right)|top:%(key.bootstrap.newsarticle.image.top)" />
			</settings>
			<headincludes/>
		</xsd:appinfo>

	</xsd:annotation>  
</xsd:schema>